+import React from 'react';
+import './Button.css';
+
+export function Button({
+  children,
+  variant = 'primary',
+  size = 'medium',
+  disabled = false,
+  onClick
+}) {
+  const classNames = [
+    'btn',
+    `btn--${variant}`,
+    `btn--${size}`,
+    disabled && 'btn--disabled'
+  ].filter(Boolean).join(' ');
+
+  return (
+    <button
+      className={classNames}
+      disabled={disabled}
+      onClick={onClick}
+    >
+      {children}
+    </button>
+  );
+}
+
+Button.variants = ['primary', 'secondary', 'danger'];
+Button.sizes = ['small', 'medium', 'large'];
+
+export default Button;

